<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/stylee.css">
  <title>payment</title>
  <link rel="icon" type="image/png" href="/photo/WhatsApp Image 2025-04-08 at 17.17.01_a1d36960.jpg">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Serif+KR:wght@200..900&display=swap" rel="stylesheet" />

</head>

<body>
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="mb-auto">
      <div>
        <h3 class="float-md-start mb-0 py-2">
          <a href="/" style="text-decoration: none;"><span class="cor-hed">CLÉ D’OR</span></a>
        </h3>
        <nav class="nav nav-masthead justify-content-center float-md-end">
          <a class="nav-link fw-bold py-2 px-0 active" aria-current="page" href="/">
            <span class="custom-tooltip">
              <img src="/photo/home-svgrepo-com.svg" alt="Home" width="27" height="27">
              <span class="tooltip-text">Home</span>
            </span>
          </a>
          <a class="nav-link fw-bold py-2 px-0" href="/#prodact">
            <span class="custom-tooltip">
              <img src="/photo/chocolate-svgrepo-com.svg" alt="Product" width="27" height="27">
              <span class="tooltip-text">Product</span>
            </span>
          </a>
          <a class="nav-link fw-bold py-2 px-0" href="http://wa.me/971508779038">
            <span class="custom-tooltip">
              <img src="/photo/contact-24hr-svgrepo-com.svg" alt="Contact" width="27" height="27">
              <span class="tooltip-text">Contact</span>
            </span>
          </a>
          <a class="nav-link fw-bold py-2 px-0" href="/cart">
            <span class="custom-tooltip">
              <img src="/photo/cart-shopping-list-svgrepo-com.svg" alt="Cart" width="27" height="27">
              <span class="tooltip-text">Cart</span>
            </span>
          </a>

        </nav>

      </div>
      <div class="container container-checkout ">
        <main class="row">
          <!-- عنوان التوصيل -->
          <div class="col-md-7 col-lg-8 mt-4">
            <h4 class="mb-3 chexkout-head">عنوان التوصيل</h4>
            <form class="needs-validation" novalidate="">
              <div class="row g-3">
                <div class="col-sm-6">
                  <label for="fullName" class="form-label" id="lable-user"> اسم المستخدم </label>
                  <input type="text" class="form-control" id="fullName" placeholder="" value="" required />
                  <div class="invalid-feedback">Please enter your name.</div>
                </div>

                <div class="col-sm-6">
                  <label for="phone" class="form-label" id="lable-phone"> رقم الهاتف  </label>
                  <input type="phone" class="form-control" id="phone" placeholder="+9715" required />
                  <div class="invalid-feedback">
                    Please enter a valid phone address for shipping updates.
                  </div>
                </div>
                <div class="col-sm-6">
                  <label for="email" class="form-label" id="lable-email"> الايميل </label>
                  <input type="email" class="form-control" id="email" placeholder="you@example.com" required />
                  <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                  </div>
                </div>
                
                <div class="col-md-6">
                  <label for="state" class="form-label" id="state-lable"> المدينة </label>
                  <select class="form-select" id="state" required>
                    <option value="">اختر المدينة</option>
                    <option>ابو ظبي</option>
                    <option>العين</option>
                    <option>دبي</option>
                    <option>الشارقة</option>
                    <option>عجمان</option>
                    <option>ام القيوين</option>
                    <option>الفجيرة</option>
                    <option>راس الخيمة</option>
                  </select>
                  <div class="invalid-feedback">Please provide a valid city.</div>
                </div>

                <div class="col-md-6">
                  <label for="address2" class="form-label" id="lable-address-more"> المنطقة </label>
                  <input type="text" class="form-control" id="address2" placeholder="" />
                </div>
                <div class="col-md-6">
                  <label for="address-appartment" class="form-label" id="lable-address-more"> الشقة </label>
                  <input type="text" class="form-control" id="address-appartment" placeholder="" />
                </div>

                <div class="col-12">
                  <label for="address2" class="form-label" id="lable-textarea-more"></label>
                  <input type="textarea" rows="100" cols="100" class="form-control" id="address3"
                    placeholder="ملاحظات الطلبات" />
                </div>
              </div>
            </form>
          </div>

          <!-- ملخص الطلب والدفع -->
          <div class="col-md-5 col-lg-4 mt-4">
            <h4 class="mb-3 chexkout-head">تفاصيل الفاتورة</h4>
            <h4 class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-primary"> </span>
              <span class="badge  rounded-pill" id="cart-count">0</span>
            </h4>

            <ul class="list-group mb-3" id="summary-cart-items">
              <li class="list-group-item text-center text-muted py-4 empty-cart-message">
              </li>
            </ul>

            <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between">
                <span class="fw-bold">المجموع درهم</span>
                <strong id="total-price">0.00</strong>
              </li>
            </ul>

            <!-- طرق الدفع -->
            <div class="my-3">
              <div class="form-check">
                <input id="credit" name="paymentMethod" type="radio" class="form-check-input" checked="" required="" />
                <label class="form-check-label" for="credit">
                  الدفع عند الاستلام
                </label>
              </div>
              <div class="form-check">
                <input id="debit" name="paymentMethod" type="radio" class="form-check-input" required="" />
                <label class="form-check-label" for="debit">البطاقة البنكية
                </label>
              </div>
              <div class="form-check">
                <input id="tabby" name="paymentMethod" type="radio" class="form-check-input" required="" />
                <label class="form-check-label" for="paypal"> tabby </label>
              </div>
              <div class="form-check">
                <input id="tamara" name="paymentMethod" type="radio" class="form-check-input" required="" />
                <label class="form-check-label" for="paypal"> tamara </label>
              </div>
            </div>

            <!-- تفاصيل البطاقة -->
            <div class="row gy-3">
              <div class="col-md-6">
                <label for="cc-name" class="form-label">Name on card</label>
                <input type="text" class="form-control" id="cc-name" placeholder="" required="" />
                <small class="text-body-secondary">Full name as displayed on card</small>
                <div class="invalid-feedback">Name on card is required</div>
              </div>

              <div class="col-md-6">
                <label for="cc-number" class="form-label">Credit card number</label>
                <input type="text" class="form-control" id="cc-number" placeholder="" required="" />
                <div class="invalid-feedback">Credit card number is required</div>
              </div>

              <div class="col-md-3">
                <label for="cc-expiration" class="form-label">Expiration</label>
                <input type="text" class="form-control" id="cc-expiration" placeholder="" required="" />
                <div class="invalid-feedback">Expiration date required</div>
              </div>

              <div class="col-md-3">
                <label for="cc-cvv" class="form-label">CVV</label>
                <input type="text" class="form-control" id="cc-cvv" placeholder="" required="" />
                <div class="invalid-feedback">Security code required</div>
              </div>
            </div>

            <hr class="my-4" />
            <button class="w-100 btn btn-md" type="submit">
              <a href="/checkout" class="btn  mb-2" id="checkout-button" disabled>
                اتمام الطلب
              </a>
            </button>
            <button class="w-100 btn btn-md" type="submit">
              <a href="/cart" class="btn  mb-2" id="checkout-button-move" disabled>
                الرجوع للسلة
              </a>
            </button>
          </div>
        </main>


        <footer
          class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top-checkout border-top">
          <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1"
              aria-label="Bootstrap">
              <img src="/photo/WhatsApp Image 2025-04-08 at 17.17.01_a1d36960.jpg" alt="CLÉ D’OR image" width="24"
                height="24" style="border-radius: 14px" />
            </a>
            <span class="mb-3 mb-md-0 copyright">© 2025 CLÉ D’OR, Inc</span>
          </div>

          <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3">
              <a class="text-body-secondary"
                href="https://www.instagram.com/cledorchocolatier?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="
                aria-label="Instagram"><img src="/photo/instagram-svgrepo-com.svg" alt="Instagram" width="26"
                  height="26" /></a>
            </li>
            <li class="ms-3">
              <a class="text-body-secondary" href="http://wa.me/971508779038" aria-label="WhatsApp"><img src="/photo/whatsapp-svgrepo-com.svg"
                  alt="WhatsApp" height="26" width="26" /></a>
            </li>
          </ul>
        </footer>


        <!-- Script لتحديث السلة -->
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            const cart = JSON.parse(localStorage.getItem("cart")) || [];
            const cartCount = document.getElementById("summary-cart-count");
            const cartItemsContainer =
              document.getElementById("summary-cart-items");
            const totalPriceElement = document.getElementById(
              "summary-total-price"
            );
            const emptyMessage = cartItemsContainer.querySelector(
              ".empty-cart-message"
            );

            if (cart.length === 0) {
              if (emptyMessage) emptyMessage.style.display = "block";
              cartCount.textContent = 0;
              totalPriceElement.textContent = "0.00";
              return;
            }

            if (emptyMessage) emptyMessage.style.display = "none";

            let total = 0;
            cartItemsContainer.innerHTML = ""; // Clear list before filling

            cart.forEach((item) => {
              const subtotal = item.quantity * parseFloat(item.price);
              total += subtotal;

              const listItem = document.createElement("li");
              listItem.className =
                "list-group-item d-flex justify-content-between lh-sm align-items-center";
              listItem.innerHTML = `
                        <div>
                            <h6 class="my-0">${item.title}</h6>
                            <small class="text-muted">${item.price} د.أ × ${item.quantity
                }</small>
                        </div>
                        <span class="text-muted">${subtotal.toFixed(
                  2
                )} د.أ</span>
                    `;
              cartItemsContainer.appendChild(listItem);
            });

            cartCount.textContent = cart.reduce(
              (acc, item) => acc + item.quantity,
              0
            );
            totalPriceElement.textContent = total.toFixed(2);
          });
        </script>
      </div>
</body>

</html>